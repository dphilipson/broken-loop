{
  "name": "broken-loop",
  "version": "1.0.0",
  "description": "Break up long-running computations to avoid blocking the event loop.",
  "main": "dist/index.js",
  "types": "dist/index",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "lint": "tslint --project .",
    "mocha": "mocha -r ts-node/register test/**/*.ts",
    "prepublish": "npm run build",
    "test": "npm run lint && npm run mocha",
    "watch": "rm -rf dist && tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dphilipson/broken-loop.git"
  },
  "keywords": [
    "loop",
    "computation",
    "break",
    "yield"
  ],
  "author": "David Philipson <dphilipson@gmail.com> (http://dphil.me)",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.32",
    "chai": "^3.5.0",
    "mocha": "^3.1.2",
    "ts-node": "^1.7.0",
    "tslint": "^3.15.1",
    "typescript": "^2.0.9"
  }
}
